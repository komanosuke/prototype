<main>
<% if logged_in? %>
  <div id="login">
    <div id="login_related">
      <div class="inner_min">
        <div class="logo">
          <%= image_tag "/common/os-logo.svg", alt: "PARCOM OS" %>
        </div>
        <div class="login_related_content">
          <h1>ログインしています。</h1>
          <%= link_to "トップページへ", '/', class:'btn' %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div id="login">
    <div id="login_related">
      <div class="inner_min">
        <div class="logo">
          <%= image_tag "/common/os-logo.svg", alt: "PARCOM OS" %>
        </div>
        <div class="login_related_content">
          <h1>ログイン</h1>
          <div id="login_form" name="login_form">
            <%= form_for(:session, url: login_path) do |f| %>
            <!--<p id="submit_failed" class="caution" style="display:none;"><%= image_tag "/signin_warning.png" %>メールアドレスまたはパスワードが空欄です</p>-->
            <div class="txt_field">
              <dt class="form_term">メールアドレス</dt>
              <dd class="form_description"><%= f.email_field :email, placeholder:'メールアドレスを入力してください' %></dd>
            </div>
            <div class="txt_field">
              <dt class="form_term">パスワード</dt>
              <dd class="form_description"><%= f.password_field :password, id:'login_password', placeholder:'パスワードを入力してください'  %></dd>
            </div>
            <%#= f.check_box :remember_me %>
            <%#= f.label "ログイン状態を保持する" %>
            <%= f.submit 'ログインする', class:'btn', id:'login_submit' %>
            <div class="forget">※パスワードをお忘れの方は<%= link_to "こちら", new_password_reset_path %></div>
          </div>
          <% end %>
        </div>
        <div class="new_signup_wrap">
          <p>PARCOM ADMINのご利用が初めての場合は、<br class="sp"><%= link_to "アカウントを作成します。", "/signupmail" %></p>
        </div>
    </div>
  </div>
<% end %>
</main>