        <%= link_to '/parcom/beginners' do %>
          <%= image_tag "/help/icon_help01.svg", alt: "はじめての方" %>
          <p>はじめての方</p>
        <% end %>
      </div>
      <div class="help_link_item">
        <%= link_to '#' do %>
          <%= image_tag "/help/icon_help02.svg", alt: "PARCOM ADMINの使い方" %>
          <p>PARCOM ADMINの使い方</p>
        <% end %>
      </div>
      <div class="help_link_item">
        <%= link_to '#' do %>
          <%= image_tag "/help/icon_help03.svg", alt: "公園の管理" %>
          <p>公園の管理</p>
        <% end %>
      </div>
      <div class="help_link_item">
